  <script>
    // Simple animated starfield
    (function(){
      const canvas = document.getElementById('starfield');
      const ctx = canvas.getContext('2d');
      let w, h, stars=[];
      function resize(){
        w = canvas.width = innerWidth; h = canvas.height = innerHeight; init();
      }
      function rand(min,max){return Math.random()*(max-min)+min}
      function init(){
        stars = [];
        const count = Math.floor((w*h)/6000);
        for(let i=0;i<count;i++){
          stars.push({x:Math.random()*w,y:Math.random()*h,z:rand(0.1,1),r:rand(0.3,1.8),vx:rand(-0.05,0.05),vy:rand(-0.05,0.05)})
        }
      }
      function draw(){
        ctx.clearRect(0,0,w,h);
        for(const s of stars){
          s.x += s.vx; s.y += s.vy;
          if(s.x<0) s.x = w; if(s.x>w) s.x=0; if(s.y<0) s.y=h; if(s.y>h) s.y=0;
          ctx.beginPath(); ctx.globalAlpha = s.z*0.9; ctx.fillStyle = '#ffffff'; ctx.arc(s.x,s.y,s.r,0,Math.PI*2); ctx.fill();
        }
        requestAnimationFrame(draw);
      }
      addEventListener('resize', resize);
      resize(); draw();
    })();
  </script>
